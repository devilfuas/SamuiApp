<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_confirm_wrap"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="#00000000"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <RelativeLayout
        android:id="@+id/rl_content_info"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#8BC34A"
        android:padding="20dp" >

        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_detail_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_detail_title"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_detail_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/rl_route"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#4CAF50"
                android:text="Route"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <!--
                <RelativeLayout
                    android:id="@+id/rl_route"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@color/scb_violet_dark"
                    android:gravity="center"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/tv_route"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/atm_branch_direction"
                        android:textColor="@color/scb_white"
                        android:textSize="15dp" />
                </RelativeLayout>
            -->
        </LinearLayout>
    </RelativeLayout>

